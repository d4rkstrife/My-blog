{% extends "/backoffice/base.html.twig" %}

{% block title %}Administration
{% endblock %}

{% block content %}
	<div class="app-main__inner">

		<div class="col-lg-12">
			<h2>Modifier Post</h2>
			{% for key, message in flashes %}
				<div>
					<p class={{ key }}>{{ message }}</p>
				</div>
			{% endfor %}
			<form method="Post">
				<div class="row" style="display: flex">
					<div class=" col-sm-10">
						<label for='autor'>Auteur</label>
						<select type="select" id="autor" name="autor" class="custom-select">
							<option value="{{ post.autor.pseudo }}">{{ post.autor.pseudo }}</option>

							{% for user in users%}
								<option value="{{ user.pseudo }}">{{ user.pseudo }}</option>
							{% endfor %}


						</select>
					</div>

					<div class=" col-sm-10">
						<label for='title'>Titre</label>
						<input class="form-control" id="title" name="title" type="text" value="{{ post.title }}" required>
					</div>
					<div class=" col-sm-10">
						<label for='chapo'>Chap√¥</label>
						<input class="form-control" id="chapo" name="chapo" type="text" value="{{ post.chapo }}" required>
					</div>
					<div class="col-sm-10">
						<label for='content'>Article</label>
						<textarea id="content" name="content" class="form-control" rows="9" required>{{ post.content }}</textarea>
					</div>
					<div class="col-sm-6">
						<button class="btn btn-action" name="id" value="{{ post.id }}" type="submit">Modifier</button>
					</div>

				</div>
			</form>

		</div>
	</div>
{% endblock %}
