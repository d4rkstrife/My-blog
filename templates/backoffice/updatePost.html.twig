{% extends "/backoffice/base.html.twig" %}

{% block title %}Administration
{% endblock %}

{% block content %}
	<div class="app-main__inner">

		<div class="col-lg-12">
			<h2>Modifier Post</h2>
			{% for key, message in flashes %}
				<div>
					<p class={{ key }}>{{ message }}</p>
				</div>
			{% endfor %}
			<form method="Post">
				<div class="row" style="display: flex">
					<input class="form-control" id="id" name="id" type="text" value=" {{ post.id }} " hidden>

					<div class=" col-sm-10">
						<label for='title'>Titre</label>
						<input class="form-control" id="title" name="title" type="text" value=" {{ post.title }} " required>
					</div>
					<div class=" col-sm-10">
						<label for='chapo'>Chap√¥</label>
						<input class="form-control" id="chapo" name="chapo" type="text" value="{{ post.chapo }}" required>
					</div>
					<div class="col-sm-10">
						<label for='content'>Article</label>
						<textarea id="content" name="content" class="form-control" rows="9" required>{{ post.content }}</textarea>
					</div>
					<div class="col-sm-6">
						<input class="btn btn-action" type="submit">
					</div>

				</div>
			</form>

		</div>
	</div>
{% endblock %}
